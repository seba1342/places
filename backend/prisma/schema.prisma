generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlaceCategory {
  RESTAURANT
  BAR
  PUB
  CAFE
  OTHER
}

model Place {
  id          String         @id @default(uuid())
  name        String
  description String?
  category    PlaceCategory
  rating      Float?
  lat         Float
  lng         Float
  address     String?
  city        String?
  state       String?
  country     String?
  imageUrl    String?
  source      String?
  sourceId    String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([lat])
  @@index([lng])
  @@index([category])
  @@unique([source, sourceId])
}
